    function formatNumberWithCommas(n) {
        if (n === null || n === undefined || n === '' || isNaN(n)) return '0';
        const [intPart, decPart] = String(n).split('.');
        const intFmt = intPart.replace(/\B(?=(\d{3})+(?!\d))/g, ',');
