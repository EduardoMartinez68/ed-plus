<div class="row">
    <div class="col">
        {{#each comboFeactures}}
        <label for="validationCustom01">CLAVE SAT</label>
        <input type="text" class="form-control" id="validationCustom01" placeholder="Sat Key" name="satKey" value="{{sat_key}}">
        {{/each}}
