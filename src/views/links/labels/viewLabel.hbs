        // Limpia el canvas antes de dibujar
        ctx.clearRect(0, 0, canvas.width, canvas.height);

        elements.forEach(el => {
            switch (el.type) {
                case 'text':
                    ctx.font = `${el.size}px ${el.font}`;
                    ctx.fillStyle = el.color;
