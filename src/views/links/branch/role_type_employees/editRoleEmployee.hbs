{{#each roleEmployee}}
    <br>
    <div class="container">
        <center><h6>Edit '{{name}}' role employee</h6></center>
        <hr>
    </div>
    <form action="/fud/{{id_companies}}/{{id}}/edit-role-employees" method="POST" enctype="multipart/form-data">
        {{>manager/type_employee/navbar}}
    </form>
{{/each}}

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var checkboxes = document.querySelectorAll('.form-check-input');

        checkboxes.forEach(function (checkbox) {
            var valueCheck = checkbox.getAttribute('valueCheck');
            if (valueCheck === 'true') {
                checkbox.checked = true;
            }
        });
    });
</script>


