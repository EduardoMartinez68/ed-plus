<style>
    .form-group-search{
        align-items: left;
        text-align: left;
    }

    .search-container {
        position: relative;
        max-width: 25%;
        right: 0%;
    }

    .search-input {
        width: 100%;
        padding: 8px 12px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 14px;
        color: #555;
        box-sizing: border-box;
    }

    .search-input:focus {
        border-color: var(--color-company);
        outline: none;
    }

    .form-select-search{
        position: absolute;
        top: calc(100% + 5px);
        left: 0;
        width: 100%;
        border: 1px solid #ddd;
        border-radius: 4px;
        background-color: #fff;
        z-index: 10;
        max-height: 150px;
        overflow-y: auto;
        box-sizing: border-box;
        display: block;
    }

    .form-select-search.display {
        display: none;
    }


    .form-select-search option {
        padding: 8px 12px;
        font-size: 14px;
        color: #555;
        background-color: #fff;
        border-bottom: 1px solid #eee;
    }

    .form-select-search option:hover {
        background-color: #f0f0f0;
    }
</style>

<div class="form-group-search">
    <label for="customerName">Buscar un Cliente</label>
    <div class="search-container">
        <input type="text" id="searchInputSelect" class="form-control" placeholder="Buscar por email...">
        <select id="clientSelect" size="8" class="form-select-search display">
            {{#each customers}}
