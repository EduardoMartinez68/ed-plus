<style>
    /*MESSAGE POP*/
    /* Fondo oscuro para el pop */
    .pop-request-overlay {
        display: none;
        position: fixed;
        z-index: 1050;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
    }

    .pop-request-modal {
        background: #fff;
        border-radius: 12px;
        padding: 20px;
        max-width: 550px;
        width: 90%;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        animation: fadeIn 0.3s ease-in-out;
        position: relative;
    }

    .pop-request-close {
        position: absolute;
        top: 10px;
        right: 15px;
        font-size: 20px;
        cursor: pointer;
        color: #555;
        font-weight: bold;
        background: transparent;
        border: none;
    }

    .pop-request-content {
        display: flex;
        gap: 15px;
        align-items: flex-start;
    }

    .pop-request-img {
        width: 25%;
        border-radius: 8px;
        object-fit: cover;
    }

    .pop-request-info {
        width: 75%;
    }

    .pop-request-info p {
        margin: 6px 0;
        font-size: 14px;
    }

    .pop-request-qty {
        display: flex;
        align-items: center;
        /* centra verticalmente */
        justify-content: center;
        /* centra horizontalmente */
        gap: 10px;
        margin-top: 10px;
        width: 100%;
    }

    .pop-request-qty input {
        width: 60%;
        height: 50px;
        text-align: center;
        font-size: 16px;
        padding: 4px;
        border: 1px solid #ccc;
        border-radius: 6px;
    }

    .pop-request-btn {
        background: var(--color-company);
        color: #fff;
        border: none;
        padding: 12px;
        width: 100%;

        border-radius: 8px;
        margin-top: 20px;
        font-size: 16px;
        cursor: pointer;
        transition: background 0.2s;
    }

    .pop-request-btn:hover {
        background: #044e8f;
    }

    .pop-request-plus-minus {
        background: var(--color-company);
        color: white;
        border: none;
        padding: 6px 12px;
        font-size: 18px;
        border-radius: 6px;
        cursor: pointer;
        width: 30%;
        height: 50px;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: scale(0.9);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }
</style>

<!-- Botón para abrir el pop -->
<button onclick="openPopRequest('1234567890')"
    style="background: var(--color-company); color: white; border: none; padding: 10px 20px; border-radius: 8px;">
    Abrir pop de producto
</button>

<!-- Pop request modal -->
<div id="pop-request-overlay" class="pop-request-overlay">
    <div class="pop-request-modal">
        <button class="pop-request-close" onclick="closePopRequest()">×</button>
        <div class="pop-request-header" style="color: var(--color-company); font-weight: bold; margin-bottom: 15px;">
            Detalle del producto
        </div>

        <div class="pop-request-content">
            <img id="pop-request-img" class="pop-request-img"
                src="https://panoli.mx/cdn/shop/products/00750105862010L.jpg?v=1618500354" alt="Imagen del producto">

            <div class="pop-request-info">
                <label id="pop-request-code">1234567890</label>
                <p><strong id="pop-request-name">Nombre del Producto</strong></p>
                <p><strong>Existencia:</strong> <span id="pop-request-stock">10</span></p>
                <p>$85.00</p>
            </div>
        </div>
        <div class="pop-request-qty">
            <button class="pop-request-plus-minus" onclick="adjustQty(-1)">−</button>
            <input type="number" id="pop-request-qty" value="1" min="0">
            <button class="pop-request-plus-minus" onclick="adjustQty(1)">+</button>
        </div>
        <button class="pop-request-btn" onclick="closePopRequest()">Aceptar</button>
    </div>
</div>
