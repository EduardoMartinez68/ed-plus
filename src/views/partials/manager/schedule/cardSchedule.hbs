<style>
    .section-employees {
        background-color: #FFFFFF;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-bottom: 20px;
    }

    h2 {
        margin-bottom: 20px;
        font-size: 24px;
        color: var(--color-company);
    }

    .employee-list {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .employee-card {
        background-color: #F4F4F4;
        border-radius: 8px;
        display: flex;
        align-items: center;
        padding: 15px;
        width: calc(33.333% - 20px);
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s, transform 0.3s;
        position: relative;
    }

    .employee-card:hover {
        background-color: #E0E0E0;
        transform: translateY(-5px);
    }

    .employee-photo {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 15px;
        flex-shrink: 0;
        /* Prevents the photo from shrinking */
    }

    .employee-info {
        flex: 1;
    }

    .employee-name {
        font-size: 18px;
        font-weight: 600;
        margin-bottom: 5px;
    }

    .employee-schedule,
    .hours-scheduled,
    .hours-worked {
        font-size: 14px;
        color: #555;
    }

    .accounting-stats {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
    }

    .stat {
        background-color: #FFFFFF;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        flex: 1;
        text-align: center;
        min-width: 200px;
    }

    .stat h3 {
        font-size: 20px;
        color: var(--color-company);
        margin-bottom: 10px;
    }

    .stat p {
        font-size: 24px;
        font-weight: 700;
        margin: 0;
    }

    .week-calendar {
        display: flex;
        gap: 8px;
        margin-top: 20px;
        justify-content: center;
        width: 100%;
    }

    .day-box {
        width: 10%;
        height: 30px;
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 12px;
        color: #FFFFFF;
        font-weight: 600;
        opacity: 0.8;
    }

    .day-box.red {
        background-color: rgba(233, 79, 79, 0.8);
    }

    .day-box.green {
        background-color: rgba(76, 175, 80, 0.8);
    }

    .day-box.yellow {
        background-color: rgba(255, 235, 59, 0.8);
        color: #333;
    }

    .day-box.blue {
        background-color: rgba(41, 182, 246, 0.8);
    }

    .day-box.gray {
        background-color: rgba(158, 158, 158, 0.8);
    }

    /* Responsivo */
    @media (max-width: 768px) {
        .employee-card {
            width: calc(50% - 20px);
        }

        .accounting-stats {
            flex-direction: column;
        }
    }

    @media (max-width: 480px) {
        .employee-card {
            width: 100%;
        }

        .stat {
            min-width: 100%;
        }

        .week-calendar {
            flex-direction: column;
        }

        .day-box {
            width: 40px;
            height: 40px;
            font-size: 16px;
        }
    }


    /*button select*/
    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropdown-button {
        background-color: #4A90E2;
        color: white;
        padding: 10px 20px;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f9f9f9;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
        z-index: 1;
        border-radius: 5px;
    }

    .dropdown-content a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
        border-radius: 5px;
    }

    .dropdown-content a:hover {
        background-color: #f1f1f1;
    }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .dropdown:hover .dropdown-button {
        background-color: #3e78c9;
    }

    /*date select*/
    .date-range-container {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .date-range-container h2 {
        margin-bottom: 20px;
        color: var(--color-company);
    }

    .date-range {
        display: flex;
        justify-content: space-between;
    }

    .date-range-container label {
        margin: 10px 0;
        display: block;
        color: #333;
    }

    .date-range-container input[type="date"] {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 16px;
        width: calc(100% - 12px);
        margin: 0 6px;
    }

    .date-range-container input[type="submit"] {
        margin-top: 20px;
        background-color: #4A90E2;
        color: white;
        padding: 10px 20px;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .date-range-container input[type="submit"]:hover {
        background-color: #3e78c9;
    }
</style>
