<div class="card">
    <div class="card-body">
        <div class="container">
            <label for="">Busca un lote</label>
            {{#each branchFree}}
            <div class="row">
                <div class="col-sm-11">
                    <input type="text" class="form-control" placeholder="Buscar..." id="search">
                </div>
                <div class="col-sm-1">
                    <button class="btn-add" id="{{id}}" onclick="openPopup()" type="button"><i
                            class="fi-icon fi-br-plus"></i></button>
                </div>
            </div>
            {{/each}}
        </div>
        <br>
        <table width="100%" border="1" class="table-information" id="myTable">
            <thead>
                <tr>
                    <th><label>Lote</label></th>
                    <th><label>F. de creaci√≥n</label></th>
                    <th><label>F. de caducidad</label></th>
                    <th><label>Existencia</label></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each providers}}
                <tr id="{{name}}">
                    <td><label><strong>{{name}}/{{representative}}</strong></label></td>
                    <td><label>{{email}}</label></th>
                    <td><label>{{cell_phone}}/{{phone}}</label></td>
                    <td><label>{{business_address}}</label></td>
                    <td>
                        <button id="{{id}}" onclick="nextWeb('{{id_companies}}/{{id_branches}}/{{id}}/edit-provider')"
                            class="btn-table-employee-edit"><i class="fi-department fi-sr-pencil"></i></button>
                        <button id="{{id}}" onclick="delete_provider('{{id_companies}}','{{id}}','{{name}}')"
                            class="btn-table-employee-delete"><i class="fi-department fi-sr-trash"></i></button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>

        {{#if providers}}

        {{else}}
        <center><label for="" id="text-info-table">No se encontraron registros.</label></center>
        {{/if}}
    </div>
</div>

