<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesión</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/session.css">
</head>
    <center>
    <section class="body-session">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card text-center">
                        <center>
                            <img src="/img/logo.webp" alt="Logo" class="logo">
                        </center>
                        <h2 class="">Iniciar sesión</h2>
                        <form action="/fud/login" method="POST">
                            <div class="form-group" style="text-align: left;">
                                <label for="">Correo electrónico</label>
                                <input type="email" id="userName" name="userName" placeholder="Correo electrónico" class="form-control" required>
                            </div>
                            <div class="form-group" style="text-align: left;">
                                <label for="">Contraseña</label>
                                <div class="input-group">
                                    <input type="password" id="password" name="password" placeholder="Contraseña" class="form-control" required>
                                    <!--
                                    <div class="input-group-append">
                                        <button type="button" id="showPasswordBtn" onclick="togglePasswordVisibility()">
                                            <i class="fi-session fi-rr-eye"></i>
                                        </button>
                                    </div>
                                    --->
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Iniciar sesión</button>
                            <div class="mt-3">
                                <a class="link-session" href="/fud/restart-password">¿Olvidaste tu contraseña?</a>
                            </div>
                            <div class="mt-3">
                                <span class="link-session">¿No tienes una cuenta?</span> <a class="link-singUp" href="/fud/signup">Regístrate</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    </center>
    <script>
        function togglePasswordVisibility() {
            var passwordInput = document.getElementById("password");
            var showPasswordBtn = document.getElementById("showPasswordBtn");

            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                showPasswordBtn.innerHTML = '<i class="fi-session fi-rr-eye-slash"></i>';
            } else {
                passwordInput.type = "password";
                showPasswordBtn.innerHTML = '<i class="fi-session fi-rr-eye"></i>';
            }
        }
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

