<style>
    /* Estilos del modal */
    .recipe-modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }

    .recipe-modal.show {
        display: flex;
    }

    .recipe-modal-dialog {
        width: 90%;
        max-width: 500px;
        background: white;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        animation: fadeIn 0.3s ease-in-out;
    }

    .recipe-modal-header {
        background-color: #075DA8;
        color: white;
        padding: 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .recipe-modal-header h5 {
        margin: 0;
    }

    .recipe-btn-close {
        background: none;
        border: none;
        font-size: 18px;
        color: white;
        cursor: pointer;
    }

    .recipe-modal-body {
        padding: 20px;
    }

    /* Estilos del formulario */
    .recipe-form-label {
        font-weight: 600;
        color: #333;
        display: block;
        margin-bottom: 5px;
    }

    .recipe-form-control {
        width: 100%;
        padding: 10px;
        border-radius: 4px;
        border: 1px solid #ccc;
        font-size: 14px;
        background-color: #f0f4f8;
        transition: border 0.3s ease-in-out;
    }

    .recipe-form-control:focus {
        border: 2px solid #075DA8;
        background-color: white;
        outline: none;
    }

    .recipe-btn-primary {
        background-color: #075DA8;
        color: white;
        border: none;
        padding: 12px;
        font-size: 16px;
        font-weight: bold;
        width: 100%;
        cursor: pointer;
        border-radius: 4px;
        margin-top: 15px;
    }

    .recipe-btn-primary:hover {
        background-color: #064B88;
    }

    /* Estilos del switch */
    .recipe-form-check {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .recipe-form-check-input {
        width: 20px;
        height: 20px;
        cursor: pointer;
    }

    /* Animación */
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: scale(0.9);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }
</style>

<!-- Modal -->
<div class="recipe-modal" id="recetaModalRecipe">
    <div class="recipe-modal-dialog">
        <div class="recipe-modal-header">
            <h5>Formulario de Receta</h5>
            <button class="recipe-btn-close" id="closeModalRecipe">&times;</button>
        </div>
        <div class="recipe-modal-body">
            <form>
                <div class="row">
                    <div class="col">
                        <label class="recipe-form-label">Folio de Receta *</label>
                        <input type="text" class="recipe-form-control" required>
                    </div>
                    <div class="col">
                        <label class="recipe-form-label">Cédula del Médico *</label>
                        <input type="text" class="recipe-form-control" required>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <label class="recipe-form-label">Nombre del Médico *</label>
                        <input type="text" class="recipe-form-control" required>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <label class="recipe-form-label">Fecha de la receta *</label>
                        <input type="date" class="recipe-form-control" required>
                    </div>
                    <div class="col">
                        <label class="recipe-form-label">Retenida</label>
                        <div class="recipe-form-check">
                            <input type="checkbox" class="recipe-form-check-input" id="retenidaSwitch">
                            <label for="retenidaSwitch">Sí</label>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col">
                        <label class="recipe-form-label">Comentario</label>
                        <textarea class="recipe-form-control" rows="3"></textarea>
                    </div>
                </div>

                <button type="submit" class="recipe-btn-primary">Guardar</button>
            </form>
        </div>
    </div>
</div>

<!-- Script para abrir y cerrar el modal -->
<script>

    const closeModalRecipe = document.getElementById("closeModalRecipe");
    const recetaModalRecipe = document.getElementById("recetaModalRecipe");


    function show_recipe(){
        recetaModalRecipe.classList.add("show");
    }

    closeModalRecipe.addEventListener("click", function () {
        recetaModalRecipe.classList.remove("show");
    });

    // Cerrar modal al hacer clic fuera del contenido
    recetaModalRecipe.addEventListener("click", function (e) {
        if (e.target === recetaModalRecipe) {
            recetaModalRecipe.classList.remove("show");
        }
    });

</script>
