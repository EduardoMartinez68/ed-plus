            let newRow = table.insertRow();

            // add cell with the value
            newRow.innerHTML = `
                <td><label><strong>${lot.value}</strong></label></td>
                <td><label date_of_manufacture="${answer.current_existence}">${formatDateForm(creation_date.value)}</label></td>
