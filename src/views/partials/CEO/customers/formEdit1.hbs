{{#each customer}}
<div class="content-sales active">
    <div class="row">
        <div class="col">
            <label>First name *</label><br>
            <input type="text" class="form-control" placeholder="First name" name="firstName" required
                value="{{first_name}}">
        </div>
        <div class="col">
            <label>Second name</label><br>
            <input type="text" class="form-control" placeholder="Second name" name="secondName" value="{{second_name}}">
        </div>
    </div>

    <div class="row">
        <div class="col">
            <label>Last name</label><br>
            <input type="tex" class="form-control" name="lastName" placeholder="lastName" value="{{last_name}}">
        </div>
    </div>
    <div class="row">
        <div class="col">
            <label>Birthday</label><br>
            <input type="date" id="birthday" name="birthday" value="{{birthday}}">
        </div>
    </div>

    <div class="row">
        <div class="col">
            <label>Cell Phone</label><br>
            <input type="text" class="form-control" placeholder="Cell Phone" name="cellPhone" value="{{cell_phone}}">
        </div>
        <div class="col">
            <label>Phone</label><br>
            <input type="text" class="form-control" placeholder="Phone" name="phone" value="{{phone}}">
        </div>
    </div>

    <div class="row">
        <div class="col">
            <label>E-mail *</label><br>
            <input type="email" class="form-control" name="email" placeholder="E-mail" required value="{{email}}">
        </div>
    </div>

    <div class="row">
        <div class="col">
            <label>Country</label>
            <select id="country" class="form-control" name="country" value="{{id_country}}">
                {{/each}}
                {{#each country}}
                <option value={{id}}>{{name}}</option>
                {{/each}}
            </select>
        </div>

        {{#each customer}}
        <div class="col">
            <label>states *</label><br>
            <input type="tex" class="form-control" name="states" placeholder="states" required value="{{states}}">
        </div>
    </div>

    <div class="row">
        <div class="col">
            <label>City *</label><br>
            <input type="tex" class="form-control" name="city" placeholder="City" required value="{{city}}">
        </div>
        <div class="col">
            <label>Street *</label><br>
            <input type="tex" class="form-control" name="street" placeholder="Street" maxlength="20" required
                value="{{street}}">
        </div>
    </div>


    <div class="row">
        <div class="col">
            <label>Outer Numbers</label><br>
            <input type="tex" class="form-control" name="num_o" placeholder="Outer Number" maxlength="5"
                value="{{num_ext}}">
        </div>
        <div class="col">
            <label>Interior Number</label><br>
            <input type="tex" class="form-control" name="num_i" placeholder="Interior Number" maxlength="5"
                value="{{num_int}}">
        </div>
        <div class="col">
            <label>Postal Code</label><br>
            <input type="tex" class="form-control" name="postal_code" placeholder="Postal Code" value="{{postal_code}}">
        </div>
    </div>
</div>
{{/each}}