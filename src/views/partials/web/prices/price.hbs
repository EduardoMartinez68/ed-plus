<script>
    document.querySelectorAll('.info-link').forEach(function (link) {
        link.addEventListener('click', function (event) {
            event.preventDefault(); // Evita el comportamiento predeterminado del enlace
            var infoLabel = this.previousElementSibling;
            if (infoLabel.style.display === 'none' || infoLabel.style.display === '') {
                infoLabel.style.display = 'block';
                this.textContent = 'Mostrar menos información';
            } else {
                infoLabel.style.display = 'none';
                this.textContent = 'Mostrar más información';
            }
        });
    });
</script>

<script>
    function showPrices(type) {
        if (type === 'restaurant') {
            document.getElementById('restaurant-prices').style.display = 'block';
            document.getElementById('franchise-prices').style.display = 'none';
        } else if (type === 'franchise') {
            document.getElementById('restaurant-prices').style.display = 'none';
            document.getElementById('franchise-prices').style.display = 'block';
        }
        // Establecer el botón activo
        document.querySelectorAll('.tabs a').forEach(item => {
            item.classList.remove('active');
        });
        document.querySelector(`.tabs a[href="#"][onclick="showPrices('${type}']`).classList.add('active');
    }
    // Llamar a la función showPrices al cargar la página
    window.onload = function () {
        showPrices('restaurant');
    };
</script>
