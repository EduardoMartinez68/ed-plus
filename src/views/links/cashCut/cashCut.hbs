<style>
    .card {
        border-radius: 12px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        border: none;
    }

    .card-title {
        font-weight: bold;
    }

    .diferencia {
        font-size: 1.2rem;
        font-weight: bold;
    }

    .bg-efectivo {
        background-color: #edf4fa;
    }

    .input-custom {
        font-size: 1.2rem;
        /* Tama√±o de texto m√°s grande */
        font-weight: bold;
        /* Hace que los n√∫meros resalten */

        /* Centrar el texto */
        border: 2px solid #007bff;
        /* Borde azul */
        border-radius: 8px;
        /* Bordes redondeados */
        padding: 10px;
        transition: all 0.3s ease-in-out;
    }

