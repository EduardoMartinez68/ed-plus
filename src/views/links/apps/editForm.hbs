    <hr>
    <div class="row">
        <!-- Secci√≥n del Editor de Campos -->
        <div class="col-md-6">
            <h3>Campos del Formulario</h3>
            <div id="fieldsContainer">
                <!-- Campos agregados aparecer√°n aqu√≠ -->
