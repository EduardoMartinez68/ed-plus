<div class="container p-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-body">
                    <label><i class="fi-icon fi-sr-user"></i> Agregar un nuevo cliente</label>
                    <hr>     

                    <!--this is a for the form for one, manager or ceo-->
                    {{#each company}}
                    <form action="/fud/{{id}}/addCustomer" method="POST" id="myForm">
                    {{/each}}
                    {{#each branchFree}}
                    <form action="/fud/{{id_companies}}/{{id}}/addCustomer" method="POST" id="myForm">
                    {{/each}}
                    {{#each branch}}
                    <form action="/fud/{{id_companies}}/{{id}}/addCustomer" method="POST" id="myForm">
                    {{/each}}

                        <!---this is for choose the form to create-->
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home"
                                    aria-selected="true">Información Personal</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile"
                                    aria-selected="false">Información Adicional</a>
                            </li>
                        </ul>
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                {{>CEO/customers/form1}}
                            </div>
                            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                                {{>manager/CRM/formCustomer2}}
                            </div>
                        </div>

                        <!--this is the button for save-->
                        <div class="content_box">
                            <br>                  
                            <div class="form-group">
                                <button class="btn btn-success btn-block" id="my-btn-from" type="submit">Guardar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
