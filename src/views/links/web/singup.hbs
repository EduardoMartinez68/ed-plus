                                <div class="form-group">
                                    <button class="btn btn-success btn-block">Sing Up</button>
                                    <br><br>
                                    <center>
                                        <label class="link-session" for="acceptTerms">Read our</label><a
                                            class="link-singUp" href="terms_conditions" target="_blank">terminition and
                                            conditions</a>
                                        <br>
                                        <input type="checkbox" id="acceptTerms" name="acceptTerms"><label
                                            class="link-session">Acepto las condiciones del Servicio y las Politicas de privacidad de FÃ¼d</label>
                                        <br><br>
                                </div>
                                </center>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
