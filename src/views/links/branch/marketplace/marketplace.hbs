<style>
    .search-bar {
        display: flex;
        justify-content: center;
        padding: 20px;
    }

    .search-bar input[type="text"] {
        width: 60%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 8px;
        margin-right: 10px;
    }

    .search-bar button {
        padding: 10px 20px;
        background-color: var(--color-company);
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
    }

    .search-bar button:hover {
        background-color: var(--color-hover);
    }

    .filter-tags {
        display: flex;
        justify-content: center;
        gap: 10px;
        padding: 10px;
    }

    .filter-tags button {
        padding: 8px 16px;
        background-color: #fff;
        border: 1px solid var(--color-company);
        border-radius: 8px;
        cursor: pointer;
        color: #5c67f2;
    }

    .filter-tags button:hover {
        background-color: var(--color-hover);
        color: #fff;
    }

    .app-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        padding: 20px;
    }

    .app-card {
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s, box-shadow 0.3s;
        text-align: center;
    }

    .app-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    }

    .app-card img {
        width: 100px;
        height: 100px;
        object-fit: cover;
        margin-top: 15px;
    }

    .app-card .app-details {
        padding: 15px;
    }

    .app-card h3 {
        margin: 10px 0;
        font-size: 20px;
    }

    .app-card p {
        margin: 0;
        font-size: 14px;
        color: #666;
    }

    .app-card button {
        margin-top: 10px;
        padding: 8px 16px;
        background-color: var(--color-company);
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.2s;
    }

    .app-card button:hover {
        background-color: var(--color-hover);
    }

    .pagination {
        display: flex;
        justify-content: center;
        margin: 20px 0;
    }

    .pagination button {
        padding: 10px 20px;
        background-color: var(--color-company);
        color: white;
        border: none;
        border-radius: 8px;
        margin: 0 5px;
        cursor: pointer;
    }

    .pagination button:hover {
        background-color: var(--color-hover);
    }
</style>


<!-- Search Bar -->
