<style>
  .history-container {
    max-height: 500px;
    overflow-y: auto;
    padding: 10px;
    font-family: sans-serif;
    font-size: 14px;
    color: #222;
  }

  .history-entry {
    border-top: 1px solid #ccc;
    padding: 12px 0;
  }

  .history-summary {
    font-weight: bold;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
  }

  .history-details {
    display: none;
    margin-top: 10px;
    padding: 10px 0 0 0;
    border-top: 1px solid #eee;
  }

  .section-title {
    font-weight: bold;
    margin-bottom: 5px;
    color: #333;
  }

  ul.product-list {
    list-style: none;
    padding-left: 0;
    margin-bottom: 12px;
  }

  ul.product-list li {
    padding: 3px 0;
    border-bottom: 1px dotted #ccc;
    font-size: 13px;
  }

  .ticket-header {
    padding: 10px 0;
    margin-bottom: 10px;
    border-bottom: 1px solid #999;
  }

  .ticket-header div {
    margin-bottom: 4px;
  }

  .note {
    background: #f3f3f3;
    padding: 6px;
    font-style: italic;
    font-size: 13px;
  }
</style>
<br><br>
<div class="container">
    <label for=""><i class="fi-icon fi-ss-receipt"></i> Historial de Ticket</label>
    <hr>
    <div class="card">
        <div class="card-body">
            <div class="ticket-header">
                <div><strong>Ticket #:</strong> {{dataTicketOld.key}}</div>
                <div><strong>Fecha de Venta:</strong> {{dataTicketOld.date_sale}}</div>
                <div><strong>Total del Ticket:</strong> ${{dataTicketOld.total}}</div>
            </div>

            <hr>


            <div class="history-container">
            {{#each historyTicket}}
                <div class="history-entry">
                
                <div class="history-summary" onclick="toggleHistoryDetails('{{id}}')">
                    <span>üïì {{date_return}}</span>
                    <span>Total Devuelto: ${{total_return}}</span>
                </div>

                <div id="details-{{id}}" class="history-details">
                    <div class="section-title">üßæ Productos antes de la devoluci√≥n</div>
                    <ul class="product-list">
                    {{#each old_ticket}}
                        <li>
                        {{name}} ({{barcode}}) ‚Äî Cantidad: {{quantity}}, Precio: ${{price}}, Total: ${{itemTotal}}
                        </li>
                    {{/each}}
                    </ul>

                    <div class="section-title">üîÅ Productos devueltos</div>
                    <ul class="product-list">
                    {{#each products_returns}}
                        <li>
                        {{name}} ({{barcode}}) ‚Äî Devueltos: {{quantityReturned}}, Total Devuelto: ${{itemTotalReturned}}
                        </li>
                    {{/each}}
                    </ul>

                    {{#if note}}
                    <div class="note">üìù Nota: {{note}}</div>
                    {{/if}}
                </div>

                </div>
            {{/each}}
            </div>

        </div>
    </div>
</div>

<script>
  function toggleHistoryDetails(id) {
    const el = document.getElementById('details-' + id);
    el.style.display = el.style.display === 'block' ? 'none' : 'block';
  }
</script>
