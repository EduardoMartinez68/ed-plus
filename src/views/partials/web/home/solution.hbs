<script>
    // Array de soluciones para cambiar automáticamente
    const solutions = [
        'Las ventas',
        'El robo hormiga',
        'El stock',
        'Las comandas',
        'Las finanzas',
        'Los pedidos',
        'El inventario',
        'El Sistema de cocina',
        'TODO...'
    ];

    let index = 0;

    // Función para cambiar la solución cada 3 segundos
    setInterval(() => {
        const solutionText = document.getElementById("solution-text");
        
        // Añadir la clase de desvanecimiento
        solutionText.classList.remove('fade-in');
        solutionText.classList.add('fade-out'); 
        
        // Espera a que termine la animación de salida antes de cambiar el texto
        setTimeout(() => {
            solutionText.innerText = solutions[index];
            
            // Volver a añadir la animación de entrada
            solutionText.classList.remove('fade-out');
            solutionText.classList.add('fade-in');
            
            index = (index + 1) % solutions.length; // Asegura que el índice vuelva a 0 después del último elemento
        }, 500); // Tiempo de espera para que termine la animación de desvanecimiento
    }, 2000);
</script>

