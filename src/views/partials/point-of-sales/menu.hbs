                    sat_key="{{sat_key}}"
                    >
    
                    <!--we will see if the product have a image-->
                    {{#if img}}
                        <img src="{{img}}" alt="Producto 1" id="product-{{id}}" loading="lazy">
                    {{else}}
                        <img src="/img/icons_first/product.webp" alt="Producto 1" id="product-{{id}}" loading="lazy">
                    {{/if}}
