<br><br><br><br>
{{#each customer}}
    <div class="form-buttons">
        <button class="btn btn-edit" onclick="show_message_email('{{id}}','{{email}}','{{name}}')">Enviar Mensaje</button>
        <button class="btn btn-2" onclick="nextWeb('{{id_companies}}/{{id_branches}}/{{id}}/create-invoice-crm')">Cotizaci√≥n</button>
        <button class="btn btn-2" onclick="create_new_note('{{id_companies}},{{id_branches}},{{id}}')">Crear Nota</button>
        <button class="btn btn-2" onclick="send_to_whatsApp('{{id}}','{{name}}','{{email}}','{{cellphone}}')">Whatsapp</button>
        <button class="btn btn-2" onclick="create_an_appointment('{{id_companies}}','{{id_branches}}','{{id}}','{{id_employees}}')">Crear Cita</button>
    </div>
{{/each}}
<div class="title-with-lines"><i class="fi-icon fi-rr-clock-three"></i> Historial</div>
<div class="container-history" id="container-history">
    {{#each historyProspect}}
        <div class="message-history">
            <div class="row">
                <div class="col-2">
                    {{#if photo}}
                        <img src="{{photo}}" alt=""
                            class="img-history-sales">
                    {{else}}
                        <img src="https://cdn-icons-png.flaticon.com/512/3177/3177440.png" alt=""
                            class="img-history-sales">
                    {{/if}}
                </div>
                <div class="col">
                    <label class="title-history">{{first_name}} {{second_name}} {{last_name}}</label>
                    <label for="">-{{timeago history_creation_date}}</label>
                    <a href="">{{link}}</a>
                    <div class="container-message-history">
                        {{comment}}
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>
{{#each customer}}
    <center><button class="btn btn-success" onclick="load_more_history('{{id}}')">Cargar</button></center>
{{/each}}