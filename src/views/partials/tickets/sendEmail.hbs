<!-- Estilos básicos -->
<style>
    #emailModal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
    }

    .modal-content {
        background: #fff;
        width: 90%;
        max-width: 700px;
        border-radius: 10px;
        padding: 20px;
        overflow: hidden;
    }

    .modal-header {
        font-size: 20px;
        margin-bottom: 15px;
        font-weight: bold;
    }

    .preview-box {
        max-height: 300px;
        overflow-y: auto;
        border: 1px solid #ccc;
        padding: 15px;
        background-color: #f9f9f9;
        border-radius: 5px;
    }

    .close-button {
        float: right;
        font-size: 20px;
        cursor: pointer;
        font-weight: bold;
    }

    .factura-html {
        margin-top: 20px;
        border-top: 1px dashed #ccc;
        padding-top: 10px;
    }
</style>

<!-- Modal HTML -->
<div id="emailModal">
    <div class="modal-content">
        <span class="close-button" onclick="cerrarModal()">&times;</span>
        <div class="modal-header">Enviar factura por correo</div>
        <input type="email" id="emailCliente" class="form-control" placeholder="Correo del cliente" />
        <br>
        <div class="preview-box" id="previewEmail">
            <!-- Vista previa del correo -->
            <p>Estimado cliente,</p>
            <p>Gracias por su compra. Puede descargar su factura en el siguiente enlace:</p>
            <p>
                <a href="https://pluspuntodeventa.com/factura?id=12345" target="_blank"
                    style="color: #007bff; text-decoration: underline;">
                    Descargar mi FACTURA
                </a>
            </p>

            <div class="factura-html" id="conatiner-facture-email">
                <!-- Aquí se mostrará el contenido renderizado de la factura CFDI -->
                <h3>Factura #12345</h3>
                <p><strong>RFC:</strong> ABCD123456789</p>
                <p><strong>Fecha:</strong> 2025-07-15</p>
                <p><strong>Total:</strong> $2,000.00 MXN</p>
                <table style="width: 100%; border-collapse: collapse;" border="1">
                    <thead>
                        <tr>
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>Precio</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Servicio de mantenimiento</td>
                            <td>1</td>
                            <td>$2,000.00</td>
                            <td>$2,000.00</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div style="margin-top: 25px; text-align: center; font-size: 13px; color: #666;">
                <a href="https://pluspuntodeventa.com" style="color: #007bff; text-decoration: none;" target="_blank">
                    Powered by PLUS
                </a>
                <br>
                <label style="font-weight: bold;">{ED} SOFTWARE DEVELOPER</label>
            </div>
        </div>
        <br>
        <button class="btn btn-edit" onclick="enviarFacturaPorEmail()">Enviar</button>
    </div>
</div>

<!-- Script para abrir/cerrar y enviar -->
<script>
    function abrirModalEmail() {
        document.getElementById('emailModal').style.display = 'flex';
        const containerFacture = document.getElementById('container-facture');

        const facturaDiv = document.getElementById('conatiner-facture-email');
        facturaDiv.innerHTML = containerFacture.innerHTML;
    }

    function cerrarModal() {
        document.getElementById('emailModal').style.display = 'none';
    }

    async function enviarFacturaPorEmail() {
        const email = document.getElementById('emailCliente').value.trim();
        if (!email) return alert("Por favor escribe un correo válido");

        const contenidoHtml = document.getElementById('previewEmail').innerHTML;

        try {
            const response = await fetch('https://pluspuntodeventa.com/api/factura/enviar_email_factura.php', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    email: email,
                    html: contenidoHtml,
                    id_factura: 12345 // este ID lo puedes actualizar dinámicamente
                })
            });

            const result = await response.json();
            if (result.success) {
                alert("Factura enviada correctamente.");
                cerrarModal();
            } else {
                throw new Error(result.message || "No se pudo enviar el correo.");
            }

        } catch (err) {
            alert("Error al enviar la factura: " + err.message);
        }
    }
</script>