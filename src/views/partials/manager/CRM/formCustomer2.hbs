<div class="form-group">
    <label for="customerName">Nombre de la empresa</label>
    <input type="text" class="form-control" id="customerName" placeholder="Nombre de la empresa">
</div>
<div class="form-group">
    <label for="email">Dirección</label>
    <input type="email" class="form-control" id="email" placeholder="Dirección de la empresa">
</div>
<div class="form-group">
    <div class="row">
        <div class="col">
            <label for="website">Sitio web</label>
            <input type="text" class="form-control" id="website" placeholder="Sitio web">
        </div>
        <div class="col">
            <label for="contactName">Nombre del contacto</label>
            <input type="text" class="form-control" id="contactName" placeholder="Nombre del contacto">
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col">
            <label for="closurePercentage">Celular</label>
            <input type="number" class="form-control" id="closurePercentage" placeholder="Celular de la empresa">
        </div>
        <div class="col">
            <label for="phone">Teléfono</label>
            <input type="tel" class="form-control" id="phone" placeholder="Teléfono de la empresa">
        </div>
    </div>
</div>

