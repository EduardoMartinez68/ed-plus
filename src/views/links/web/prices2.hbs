<script>
    document.querySelectorAll('.info-link').forEach(function(link) {
        link.addEventListener('click', function(event) {
            event.preventDefault(); // Evita el comportamiento predeterminado del enlace
            var infoLabel = this.previousElementSibling;
            if (infoLabel.style.display === 'none' || infoLabel.style.display === '') {
                infoLabel.style.display = 'block';
                this.textContent = 'Mostrar menos información';
            } else {
                infoLabel.style.display = 'none';
                this.textContent = 'Mostrar más información';
            }
        });
    });
</script>
