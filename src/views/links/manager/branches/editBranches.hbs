<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/css/addUser/addUser.css">
</head>
<body>
    <div class="container p-4">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card">
                    <div class="card-body">
                        {{#each branch}} 
                        <form action="/fud/{{id}}/{{id_companies}}/edit-branch" method="POST" enctype="multipart/form-data">      
                                <br>
                                <center><label><i class="fi-icon fi-sr-store-alt"></i>Editar la sucursal '{{name_branch}}'</label></center>      
                                <hr>
                                <div class="form-group">
                                    <label>ID suscripción *</label><br>
                                    <input type="text" class="form-control" name="idSubscription" placeholder="ID suscripción"  maxlength="60" autofocus required>
                                </div>
                                <div class="form-group">
                                    <label>Nombre de la sucursal *</label><br>
                                    <input type="text" class="form-control" name="name" placeholder="Nombre de la sucursal"  maxlength="60" value="{{name_branch}}" required>
                                </div>
                                <div class="form-group">
                                    <label>Alias *</label><br>
                                    <input type="text" class="form-control" name="alias" placeholder="Alias"  maxlength="50" value="{{alias}}"  required>
                                </div>
                                <div class="form-group">
                                    <label>Representante *</label><br>
                                    <input type="text" class="form-control" name="representative" placeholder="Representante"  value="{{representative}}" maxlength="100" required>
                                </div>
                                <table>
                                    <th>
                                        <td>
                                            <div class="form-group">
                                                <label>Teléfono</label><br>
                                                <input type="text" class="form-control" name="phone" placeholder="Teléfono"  value="{{phone}}" maxlength="16">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="form-group">
                                                <label>Celular</label><br>
                                                <input type="text" class="form-control" name="cell_phone" placeholder="Celular"  value="{{cell_phone}}" maxlength="16">
                                            </div>
                                        </td>
                                    </th>
                                </table>
                                <div class="form-group">
                                    <label>Correo electrónico *</label><br>
                                    <input type="email" class="form-control" name="email" placeholder="Correo electrónico"  maxlength="100" value="{{email_branch}}" required>
                                </div>
                            {{/each}} 

                            <div class="form-group">
                                <label>País *</label><br>
                                {{#each branch}} 
                                <select id="country" class="form-control" name="country" value="{{id_country}}">
                                {{/each}}
                                    {{#each country}}
                                        <option value="{{id}}">{{name}}</option>
                                    {{/each}}
                                </select>
                            </div>

                            {{#each branch}} 
                                <div class="form-group">
                                    <label>Municipio *</label><br>
                                    <input type="text" class="form-control" name="municipality"  placeholder="Municipio" value="{{municipality}}" required>
                                </div>
                                <div class="form-group">
                                    <label>Ciudad *</label><br>
                                    <input type="text" class="form-control" name="city" placeholder="Ciudad" value="{{city}}" required>
                                </div>
                                <div class="form-group">
                                    <label>Colonia *</label><br>
                                    <input type="text" class="form-control" name="cologne" placeholder="Colonia" value="{{cologne}}" required>
                                </div>
                                <div class="form-group">
                                    <label>Dirección *</label><br>
                                    <input type="text" class="form-control" name="street" placeholder="Dirección"  maxlength="30" value="{{address}}" required>
                                </div>
                                <div class="form-group">
                                    <label>Números exteriores</label><br>
                                    <input type="text" class="form-control" name="num_o" placeholder="Número exterior"  maxlength="5" value="{{num_ext}}">
                                </div>
                                <div class="form-group">
                                    <label>Número interior</label><br>
                                    <input type="text" class="form-control" name="num_i" placeholder="Número interior"  maxlength="5" value="{{num_int}}">
                                </div>
                                <div class="form-group">
                                    <label>Código Postal *</label><br>
                                    <input type="text" class="form-control" name="postal_code" placeholder="Código Postal"  pattern="[0-9]{5}" value="{{postal_code}}" required>
                                </div>
                            {{/each}} 

                            <div class="form-group">
                                <button class="btn btn-success btn-block">Guardar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="/js/manager/addEmployee.js"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js" type="text/javascript"></script>
    <script src="js/chosen.jquery.js" type="text/javascript"></script>
    <script type="text/javascript">
    $(document).ready(function(){
        $(".chosen-select").chosen({no_results_text:'No hay resultados para '});
    });
    </script>

  <script>
    //this script upload select
    var mySelect = document.getElementById("country");

    // get the value that i need 
    var valueNeed = mySelect.getAttribute("value");

    for (var i = 0; i < mySelect.options.length; i++) {
      if (mySelect.options[i].value == valueNeed) {
        mySelect.options[i].selected = true;
        break;  
      }
    }
  </script>
</body>
</html>