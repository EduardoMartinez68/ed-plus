<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
    }

    .sidebar {
        height: 100vh;
        padding-top: 20px;
        background-color: #343a40;
    }

    .sidebar a {
        color: #ffffff;
        text-decoration: none;
        padding: 15px;
        display: block;
        margin: 0 10px;
        border-radius: 5px;
    }

    .sidebar a:hover {
        background-color: #495057;
    }

    .sidebar .active {
        background-color: #495057;
    }

    .content {
        padding: 20px;
        background-color: #ffffff;
        margin-left: 250px;
    }

    .content h2 {
        margin-bottom: 20px;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-dark sidebar">
            <div class="position-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#empresa">
                            Empresa
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#interface">
                            Interfaz
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#usuarios">
                            Usuarios
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#notificaciones">
                            Notificaciones
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#seguridad">
                            Seguridad
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 content">
            <div id="empresa">
                <h2>Configuración de Empresa</h2>
                <p>Aquí puedes configurar los detalles de tu empresa.</p>
                <!-- Añade formularios o contenido relacionado con la empresa aquí -->
            </div>
            <div id="interface" style="display:none;">
                {{#each companies}}
                    <form action="/fud/{{id}}/change-navbar" method="post">
                        {{>options/navbar}}
                    </form>
                {{/each}}
                {{#each branchFree}}
                    <form action="/fud/{{id_companies}}/{{id}}/change-navbar" method="post">
                        {{>options/navbar}}
                    </form>
                {{/each}}
            </div>
            <div id="usuarios" style="display:none;">
                <h2>Configuración de Usuarios</h2>
                <p>Aquí puedes gestionar los usuarios de la aplicación.</p>
                <!-- Añade formularios o contenido relacionado con los usuarios aquí -->
            </div>
            <div id="notificaciones" style="display:none;">
                <h2>Configuración de Notificaciones</h2>
                <p>Aquí puedes gestionar las notificaciones.</p>
                <!-- Añade formularios o contenido relacionado con las notificaciones aquí -->
            </div>
            <div id="seguridad" style="display:none;">
                <h2>Configuración de Seguridad</h2>
                <p>Aquí puedes gestionar la seguridad de la aplicación.</p>
                <!-- Añade formularios o contenido relacionado con la seguridad aquí -->
            </div>
        </main>
    </div>
</div>

<script>
    // Función para cambiar entre secciones
    document.querySelectorAll('.nav-link').forEach(link => {
        link.addEventListener('click', function () {
            document.querySelectorAll('.content > div').forEach(section => {
                section.style.display = 'none';
            });
            document.querySelector(this.getAttribute('href')).style.display = 'block';
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active');
            });
            this.classList.add('active');
        });
    });
</script>