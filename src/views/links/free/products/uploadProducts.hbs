<link rel="stylesheet" href="/css/manager/supplies_products.css">
<style>
  /* Card estilizada */
  .card {
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
    padding: 20px;
    text-align: center;
    width: 100%;
  }

  /* Estilos del formulario */
  form {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  /* Estilos del input de archivo */
  .file-input {
    padding: 12px 20px;
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 5px;
    background-color: #f9f9f9;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .file-input:hover {
    border-color: var(--color-company);
    background-color: #f1f8ff;
  }

  /* Estilo del botón */
  .submit-btn {
    padding: 12px 25px;
    font-size: 16px;
    color: white;
    background-color: var(--color-company);
    ;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .submit-btn:hover {
    background-color: var(--color-company);
    ;
  }

  .submit-btn:focus {
    outline: none;
  }

  .submit-btn:active {
    background-color: var(--color-company);
    ;
  }

  /* Animación de suavizado al pasar el mouse */
  .file-input:focus,
  .submit-btn:focus {
    outline: none;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
  }

  /* Asegura que todo esté centrado */
  .card-body {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }
</style>
<br><br>
