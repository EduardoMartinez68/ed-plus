<style>

/* Label styling */
.form-group label {
    font-weight: 500;
    font-size: 15px;
    color: #555;
    margin-bottom: 6px;
}

/* Input and textarea styling */
.form-control,
.form-control-file,
select {
    border-radius: 10px;
    border: 1px solid #ccc;
    padding: 10px 14px;
    font-size: 14px;
    transition: all 0.2s ease-in-out;
    background-color: #f9f9f9;
}

.form-control:focus,
select:focus {
    outline: none;
    box-shadow: 0 0 0 2px rgba(100, 100, 255, 0.2);
    border-color: #6c63ff;
    background-color: #fff;
}

/* Checkbox styling */
.form-check-input {
    margin-right: 8px;
}

/* Image preview */
#editPreviewImage {
    width: 300px;
    height: 300px;
    border-radius: 12px;
    display: none;
    margin-top: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease-in-out;
}


/* Select containers */
.row .form-group select {
    width: 100%;
}

.custom-file-upload {
    position: relative;
    display: inline-block;
    padding: 12px 20px;
    border: 2px dashed #aaa;
    border-radius: 12px;
    background-color: #f9f9f9;
    color: #555;
    font-weight: 500;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
    width: 100%;
    max-width: 300px;
}

.custom-file-upload:hover {
    background-color: #f0f0f0;
    border-color: #666;
}

.custom-input-file {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    cursor: pointer;
}

.position-relative {
    position: relative;
}

.position-absolute {
    position: absolute;
}

.top-0 {
    top: 0;
}

.end-0 {
    right: 0;
}

.m-1 {
    margin: 0.25rem;
}

/* Responsive spacing */
@media (max-width: 576px) {
    .card-body {
        padding: 20px;
    }
}
</style>
<link rel='stylesheet' href='https://cdn-uicons.flaticon.com/3.0.0/uicons-thin-rounded/css/uicons-thin-rounded.css'>
<link rel='stylesheet' href='https://cdn-uicons.flaticon.com/3.0.0/uicons-thin-rounded/css/uicons-thin-rounded.css'>

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <label><i class="fi fi-rr-marketplace-store"></i> Editar producto online</label>
            <hr>
             <div id="editProductMessage" class="mt-3"></div>
            <form id="editProductForm" enctype="multipart/form-data">
                <!-- Datos ocultos -->
                <input type="hidden" id="token" name="token" value="{{token}}">
                <input type="hidden" id="user_email" name="user_email">
                <input type="hidden" id="password" name="password">
                <input type="hidden" id="id_product" name="id_product" value="{{id_product}}">


                <!-- Vista previa -->
                <div class="row">
                    <div class="col-3">
                        <img id="editPreviewImage" src="" alt="Vista previa" class="img-fluid rounded shadow-sm">
                        <button type="button" id="removeImageBtn" class="btn btn-danger btn-sm position-absolute top-0 end-0 m-1" style="display: none;">‚úï</button>
                    </div>
                    <div class="col-9">
                        <div class="form-group">
                            <label for="name">Nombre del producto</label>
                            <input type="text" class="form-control" name="name" required>
                        </div>
                        <div class="form-group">
                            <label for="price">Precio</label>
                            <input type="number" step="0.01" class="form-control" name="price" required>
                        </div>

                        <div class="form-group">
                            <label for="exist">Existencia en la web</label>
                            <input type="number" class="form-control" name="exist" required>
                        </div>
                        {{>shop/departaments}}
                    </div>
                </div>

                <!-- Subir nueva imagen -->
                <div class="form-group">
                    <div class="custom-file-upload">
                        <input type="file" class="custom-input-file" name="img" id="editImgInput" accept="image/*">
                        <span>üìÅ Seleccionar imagen</span>
                    </div>
                </div>

                <div class="form-group ms-2">
                    <input type="checkbox" class="form-check-input" id="status" name="status">
                    <label class="form-check-label" for="status">Producto visible en la tienda</label>
                </div>

                <div class="form-group">
                    <label for="description">Descripci√≥n</label>
                    <textarea class="form-control" name="description" rows="5" required></textarea>
                </div>


                <button type="submit" class="btn btn-success mt-3">Actualizar producto</button>
            </form>
        </div>
    </div>
</div>
{{>loading}}


<script>
    const email = localStorage.getItem('user_email');
    const password = localStorage.getItem('user_password');

    document.getElementById('user_email').value = email;
    document.getElementById('password').value = password;

    const form = document.getElementById('editProductForm');
    const messageDiv = document.getElementById('editProductMessage');
    const loadingOverlay = document.getElementById('loadingOverlay');
    const previewImage = document.getElementById('editPreviewImage');
    const imgInput = document.getElementById('editImgInput');
    const removeImageBtn = document.getElementById('removeImageBtn');

    // Vista previa de nueva imagen seleccionada
    imgInput.addEventListener('change', function () {
        const file = this.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                previewImage.src = e.target.result;
                previewImage.style.display = 'block';
                removeImageBtn.style.display = 'inline-block';
            }
            reader.readAsDataURL(file);
        }
    });
    removeImageBtn.style.display = 'inline-block';

    removeImageBtn.addEventListener('click', function () {
        previewImage.src = '';
        previewImage.style.display = 'none';
        removeImageBtn.style.display = 'none';
        imgInput.value = ''; // Resetea input file
    });

    // Enviar formulario para actualizar
    form.addEventListener('submit', async function (e) {
        e.preventDefault();

        const formData = new FormData(form);
        loadingOverlay.style.display = 'flex';
        messageDiv.textContent = '';

        try {
            const response = await fetch('https://pluspuntodeventa.com/api/branch_online/update_product.php', {
                method: 'POST',
                body: formData
            });

            const result = await response.json();
            if (result.success) {
                messageDiv.innerHTML = `<div class="alert alert-success">‚úÖ Producto actualizado correctamente.</div>`;
                //form.reset();
                //previewImage.style.display = 'none';
            } else {
                messageDiv.innerHTML = `<div class="alert alert-danger">‚ùå ${result.message || 'Error al actualizar el producto.'}</div>`;
            }
        } catch (error) {
            console.error('Error:', error);
            messageDiv.innerHTML = `<div class="alert alert-danger">‚ùå Error de red al actualizar el producto.</div>`;
        }

        loadingOverlay.style.display = 'none';
    });

    // Esta funci√≥n puede ser llamada externamente cuando el usuario elige editar un producto
    function loadProductToEdit(product) {
        const form = document.getElementById('editProductForm');
        form.name.value = product.name;
        form.description.value = product.description;
        form.price.value = product.price;
        form.exist.value = product.exist;
        form.id_product.value = product.id_product;

        if (product.img) {
            const preview = document.getElementById('editPreviewImage');
            preview.src = product.img;
            preview.style.display = 'block';
        }
    }

    async function load_information_of_the_product() {
        const email = localStorage.getItem('user_email');
        const password = localStorage.getItem('user_password');
        const token = document.getElementById('token').value;
        const productId = document.getElementById('id_product').value;

        document.getElementById('user_email').value = email;
        document.getElementById('password').value = password;

        const form = document.getElementById('editProductForm');
        const previewImage = document.getElementById('editPreviewImage');
        const messageDiv = document.getElementById('editProductMessage');

        if (!email || !password || !token || !productId) {
            messageDiv.innerHTML = `<div class="alert alert-danger">‚ùå Faltan credenciales o el ID del producto.</div>`;
            return;
        }

        // Mostrar loader
        loadingOverlay.style.display = 'flex';

        try {
            const response = await fetch('https://pluspuntodeventa.com/api/branch_online/get_product_by_id.php', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    user_email: email,
                    password: password,
                    token: token,
                    id_product: productId
                })
            });

            const result = await response.json();
            console.log(result)
            if (result.success && result.data) {
                const product = result.data;

                // Llenar formulario con los datos recibidos
                form.name.value = product.name;
                form.description.value = product.description;
                form.price.value = product.price;
                form.exist.value = product.exist;
                form.id_product.value = product.id;
                form.status.checked = product.status == 1;
                if (product.img) {
                    previewImage.src = product.img;
                    previewImage.style.display = 'block';
                }

            } else {
                messageDiv.innerHTML = `<div class="alert alert-danger">‚ùå ${result.message || 'No se pudo obtener el producto.'}</div>`;
            }

        } catch (error) {
            console.error('Error:', error);
            messageDiv.innerHTML = `<div class="alert alert-danger">‚ùå Error de red al obtener el producto.</div>`;
        }

        // Ocultar loader
        loadingOverlay.style.display = 'none';
    }

    load_information_of_the_product();

</script>