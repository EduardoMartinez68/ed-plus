</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const searchInput = document.getElementById('search-table');
        const table = document.getElementById('inventory-table').getElementsByTagName('tbody')[0];
        let debounceTimeout2;

        searchInput.addEventListener('input', function () {
            clearTimeout(debounceTimeout2);

            debounceTimeout2 = setTimeout(() => {
                const filter = searchInput.value.toLowerCase();
                const rows = table.getElementsByTagName('tr');

                let anyVisible = false;

                for (let i = 0; i < rows.length; i++) {
                    const firstCell = rows[i].getElementsByTagName('td')[0]; // Nombre
                    const barcode = rows[i].dataset.barcode ? rows[i].dataset.barcode.toLowerCase() : '';

                    if (firstCell) {
                        const text = firstCell.textContent.toLowerCase();

                        if (text.includes(filter) || barcode.includes(filter) || filter === '') {
                            rows[i].style.display = '';
                            anyVisible = true;
                        } else {
                            rows[i].style.display = 'none';
                        }
                    }
                }

                // Si quieres aquí podrías mostrar un mensaje de "No se encontraron resultados" si anyVisible es false
            }, 300); // Espera 300 milisegundos (0.3 segundos) después de que el usuario deje de escribir
        });
    });


    async function update_all_the_inventory() {
        if (await questionMessage('📝 Actualizar inventario', 'Esta acción actualizará todos estos productos, ¿continuamos?')) {
            const listInventory = await get_all_inventory_data_of_the_table();

            try {
                const id_branch = document.getElementById('id_branch').value;
                const id_company = document.getElementById('id_company').value;

                const response = await fetch(`/links/${id_company}/${id_branch}/update_all_the_inventory`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ listInventory })
                });

                const data = await response.json(); // <- ahora sí espera respuesta

                if (response.ok) {
                    window.location.href = data.redirectUrl; // <- redirige según lo que mande el backend
                } else {
                    errorMessage('❌', 'Error al actualizar el inventario');
                }
            } catch (error) {
                console.error('Error en update_all_the_inventory:', error);
                errorMessage('❌', 'Error en la conexión con el servidor');
            }
        }
    }

    function get_all_inventory_data_of_the_table() {
        const inventoryTableBody = document.querySelector('#inventory-table tbody');
        const rows = inventoryTableBody.querySelectorAll('tr');
        const productsList = [];

        rows.forEach(row => {
            const productData = {
                id: row.getAttribute('idProduct'),
                barcode: row.getAttribute('barcode'),
                name: row.getAttribute('name'),
                max_inventary: row.getAttribute('max_inventary'),
                min_inventary: row.getAttribute('min_inventary'),
                existence: row.getAttribute('existence'),
                sale_unity: row.getAttribute('sale_unity'),
                sale_price: row.getAttribute('sale_price'),
                newExistence: row.querySelector('.newExistence')?.textContent.trim() || '',
                diferencia: row.querySelector('.diferencia')?.textContent.trim() || '',
                importe: row.querySelector('.importe')?.getAttribute('total') || ''
            };

            productsList.push(productData);
        });

        return productsList;
    }

    async function deleteRow(button, idProduct) {
        // get the row of the button clicked
        const row = button.closest('tr');
        const rowCheckbox = row.querySelector('.product-check:checked');

        //first we will check if the idProduct is a number, if not we will parse it to int
        if (rowCheckbox) {
            deleteSelectedRows();
            return;
        }

        idProduct = parseInt(idProduct);
        if (await questionMessage('¡Ay caramba! 😱', '¿Estás seguro de que quieres eliminar esta fila?')) {
            if (row) {
                // delete the row from the table
                row.remove();
                // delete the product from the listProducts array
                const index = listProducts.findIndex(product => parseInt(product.id) === idProduct);
                if (index !== -1) {
                    listProducts.splice(index, 1);
                    check_if_products_exist();
                }

                notificationMessage('¡Listo! 😊', 'El producto fue eliminado con éxito.');
            }
        }
    }

    async function deleteSelectedRows() {
        if (await questionMessage('¡Atención! ⚠️', '¿Estás seguro de que quieres eliminar todos los productos seleccionados?')) {
            // Seleccionamos todos los checkboxes marcados
            const checkedCheckboxes = document.querySelectorAll('.product-check:checked');

            // Para cada checkbox seleccionado, eliminamos la fila
            checkedCheckboxes.forEach(checkbox => {

                const row = checkbox.closest('tr');
                const idProduct = row ? row.getAttribute('idProduct') : null;
                if (idProduct) {
                    if (row) {
                        row.remove();

                        // Eliminar el producto de la lista
                        const index = listProducts.findIndex(product => parseInt(product.id) === parseInt(idProduct));
                        if (index !== -1) {
                            listProducts.splice(index, 1);
                        }
                    }
                }
            });

            // Llamamos a la función que verifica si existen productos
            check_if_products_exist();
            notificationMessage('¡Listo! 😊', 'Los productos seleccionados han sido eliminados de la tabla.');
        }
    }


    function check_if_products_exist() {
        const dataElements = document.querySelectorAll('.data-element-table');
        const tableContainer = document.querySelector('.table-container');
        const tbody = document.querySelector('#inventory-table tbody');

        // Verifica si la lista de productos está vacía
        if (listProducts.length === 0) {
            // Oculta la tabla
            tableContainer.style.display = 'none';
            dataElements.forEach(element => {
                element.style.display = 'none';
            });

            // Crea un mensaje alegre y simpático para mostrar al usuario
            const message = document.createElement('div');
            message.classList.add('empty-message');
            message.innerHTML = `
                <h2>¡Ups! 😅 No hay productos aún...</h2>
                <p>¡Vamos! Empieza a buscar artículos y añádelos a la tabla, ¡es muy fácil!</p>
                <button onclick="openPopSearch()">Empezar a buscar</button>
            `;

            // Muestra el mensaje debajo de la tabla
            tableContainer.parentElement.appendChild(message);

            //restart the checkbox of the min and max limits
            const ignoreLimitToggle = document.getElementById('ignore-limit-toggle');
            ignoreLimitToggle.checked = false;
            ignoreLimitToggle.disabled = false;

            //
            const selectAllCheckbox = document.getElementById('select-all-the-products');
            selectAllCheckbox.checked = false;

            //
            document.getElementById('search').value = '';
        }
    }

    function show_table_again() {
        if (listProducts.length === 1) {
            const tableContainer = document.querySelector('.table-container');
            const emptyMessage = document.querySelector('.empty-message');
            const dataElements = document.querySelectorAll('.data-element-table');

            // Muestra la tabla y oculta el mensaje
            tableContainer.style.display = 'block';
            dataElements.forEach(element => {
                element.style.display = 'block';
            });
            emptyMessage.remove();
        }
    }
    /**/
    // Referencia al checkbox
    const ignoreLimitToggle = document.getElementById('ignore-limit-toggle');

    // Agregamos un evento al checkbox
    ignoreLimitToggle.addEventListener('change', async function () {

        // Verificamos si se activó el checkbox
        if (ignoreLimitToggle.checked) {
            // Mostramos un mensaje de alerta
            if (!await questionMessage('¡Advertencia! 😱', 'Si decides ignorar los límites máximos y mínimos de los productos, no podrás volver a activarlos. Tendrás que realizar un nuevo inventario para establecer los valores nuevamente. ¿Estás seguro de que deseas continuar?')) {
                // Si el usuario cancela, desmarcamos el checkbox
                ignoreLimitToggle.checked = false;

            } else {
                ignoreLimitToggle.disabled = true;
            }
        }
    });

    /*SELECT SWTICH*/
    // select the switch and all the checkboxes of the products
    const selectAllCheckbox = document.getElementById('select-all-the-products');

    // when the switch change of status, on or off all the checkboxes
    selectAllCheckbox.addEventListener('change', function () {
        const productCheckboxes = document.querySelectorAll('.product-check');
        // if the switch is on, we will on all the checkboxes of the products of the table
        productCheckboxes.forEach(checkbox => {
            checkbox.checked = selectAllCheckbox.checked;
        });
    });
</script>