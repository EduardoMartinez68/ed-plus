<div class="tab-pane fade" id="navbar-sales" role="tabpanel" aria-labelledby="navbar-sales-tab">
    <div class="card">
        <div class="card-body">
            <label for=""><i class="fi-icon fi-ss-cash-register"></i> Ventas</label>
            <hr>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchChangeCoins" name="view_products_on_backorder" valueCheck="{{view_products_on_backorder}}">
                <label class="form-check-label" for="flexSwitchChangeCoins">Ver Compras en Espera</label>
            </div>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchChangeCoins" name="add_product_on_backorder" valueCheck="{{add_product_on_backorder}}">
                <label class="form-check-label" for="flexSwitchChangeCoins">Agregar Compra en Espera</label>
            </div>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchChangeCoins" name="select_product_on_backorder" valueCheck="{{select_product_on_backorder}}">
                <label class="form-check-label" for="flexSwitchChangeCoins">Seleccionar Compra en Espera</label>
            </div>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchChangeCoins" name="remove_product_for_sale" valueCheck="{{remove_product_for_sale}}">
                <label class="form-check-label" for="flexSwitchChangeCoins">Eliminar Productos en el carrito</label>
            </div>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchChangeCoins" name="delete_the_shopping_cart" valueCheck="{{delete_the_shopping_cart}}">
                <label class="form-check-label" for="flexSwitchChangeCoins">Eliminar todos los Productos en el carrito</label>
            </div>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchChangeCoins" name="cut_box" valueCheck="{{cut_box}}" >
                <label class="form-check-label" for="flexSwitchChangeCoins">Hacer Corte de Caja</label>
            </div>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchSell" name="sell" valueCheck="{{sell}}">
                <label class="form-check-label" for="flexSwitchSell">App Website</label>
            </div>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchApplyDiscount" name="apply_discount" valueCheck="{{apply_discount}}">
                <label class="form-check-label" for="flexSwitchApplyDiscount">Aplicar Descuento</label>
            </div>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchApplyReturns" name="apply_returns" valueCheck="{{apply_returns}}" disabled>
                <label class="form-check-label" for="flexSwitchApplyReturns">Aplicar Devoluciones</label>
            </div>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchChangeCoins" name="change_coins" valueCheck="{{change_coins}}" disabled>
                <label class="form-check-label" for="flexSwitchChangeCoins">Cambiar Monedas</label>
            </div>
        </div>
    </div>
</div>
