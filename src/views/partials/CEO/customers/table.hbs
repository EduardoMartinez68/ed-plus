    {{#each customers}}
      <tr id="{{email}}">
        <td>{{first_name}} {{second_name}} {{last_name}}</td>
        <td>{{email}}</td>
        <td>{{cell_phone}}/{{phone}}</td>
        <td>{{points}}</td>
        <td>
            <button class="btn btn-edit" id="{{id}}" onclick="edit_customer(this.id,'{{id_companies}}')"><i class="fi-department fi-sr-pencil"></i></button>
